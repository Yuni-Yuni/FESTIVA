<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_color">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:text="@string/createEvent"
        android:textColor="@color/buttons_color"
        android:textSize="36sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

     <com.google.android.material.textfield.TextInputLayout
         android:layout_width="380dp"
         android:layout_height="wrap_content"
         android:background="@drawable/edittext_border"
         android:hint="@string/event_title"
         android:textColorHint="@color/buttons_color"
         android:textColor="@color/buttons_color"
         android:id="@+id/TextFieldLayout1"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="20dp"
         android:layout_marginBottom="10dp">

         <com.google.android.material.textfield.TextInputEditText
             android:id="@+id/editText1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/buttons_color"
             android:textColorHint="@color/buttons_color"
             android:background="@android:color/transparent"/>

     </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:minHeight="120dp"

        android:hint="@string/content_description"
        android:textColorHint="@color/buttons_color"

        android:textColor="@color/buttons_color"
        android:id="@+id/TextFieldLayout2"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:gravity="top"
            android:textColor="@color/buttons_color"
            android:textColorHint="@color/buttons_color"
            android:background="@drawable/edittext_border"/>

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/editTextDate"
        android:textColorHint="@color/buttons_color"
        android:background="@drawable/edittext_border"
        android:layout_width="380dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:hint="@string/data"
        android:autofillHints="@string/data"
        android:layout_margin="20sp"
        android:ems="10"
        android:minHeight="48dp"
        android:textSize="16sp"
        android:paddingHorizontal="10sp"
        android:focusable="false"
        android:inputType="date"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <EditText
            android:id="@+id/editTextTime1"
            android:textColorHint="@color/buttons_color"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:autofillHints="@string/start"
            android:minHeight="50dp"
            android:hint="@string/start"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/edittext_border"
            android:paddingHorizontal="20dp"
            android:textSize="16sp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="time"
            android:focusable="false"
            android:clickable="true"/>

        <EditText
            android:id="@+id/editTextTime2"
            android:textColorHint="@color/buttons_color"
            android:layout_width="0dp"
            android:minHeight="50dp"
            android:autofillHints="@string/end"
            android:hint="@string/end"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/edittext_border"
            android:paddingHorizontal="20dp"
            android:textSize="16sp"
            android:layout_weight=".5"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="time"
            android:focusable="false"
            android:clickable="true"/>
    </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_Reminder"
            android:layout_width="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="@string/remindMe"
            android:textColor="@color/buttons_color"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:checked="false"
            app:thumbTint="@color/white"
            app:thumbIconTint="@color/main_color"
            app:trackTint="@color/main_color"
            />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_card_generation"
        android:layout_width="400dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:text="@string/createCard"
        android:textColor="@color/buttons_color"
        android:textSize="16sp"
        android:checked="false"
        app:thumbTint="@color/white"
        app:thumbIconTint="@color/main_color"
        app:trackTint="@color/main_color"
        />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_card_sender"
        android:layout_width="400dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:text="@string/sendCard"
        android:textColor="@color/buttons_color"
        android:textSize="16sp"
        android:checked="false"
        app:thumbTint="@color/white"
        app:thumbIconTint="@color/main_color"
        app:trackTint="@color/main_color"
        />

    <com.google.android.material.button.MaterialButton
         android:layout_width="400dp"
         android:layout_gravity="center_horizontal"
         android:layout_height="60dp"
         android:id="@+id/dismiss"
         android:layout_marginTop="10dp"
         android:backgroundTint="@color/buttons_color"
         android:text="@string/create"
         android:textColor="@color/page_color"
         android:textSize="16sp" />

</LinearLayout>