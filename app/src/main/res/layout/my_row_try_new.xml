<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@color/page_color"
    android:id="@+id/EventLayout"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@color/page_color"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:elevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@color/page_color"
            android:padding="12dp"
            >

            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Название события"
                android:textColor="@color/buttons_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hourStart" />

            <TextView
                android:id="@+id/hourStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/natural"
                android:text="00"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/twoDots1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/natural"
                android:text=":"
                app:layout_constraintStart_toEndOf="@+id/hourStart"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/minuteStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/natural"
                android:text="00"
                app:layout_constraintStart_toEndOf="@+id/twoDots1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/natural"
                android:text="–"
                app:layout_constraintStart_toEndOf="@+id/minuteStart"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hourEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/natural"
                android:text="00"
                app:layout_constraintStart_toEndOf="@+id/dash"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/twoDots2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/natural"
                android:text=":"
                app:layout_constraintStart_toEndOf="@+id/hourEnd"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/minuteEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/natural"
                android:text="00"
                app:layout_constraintStart_toEndOf="@+id/twoDots2"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>