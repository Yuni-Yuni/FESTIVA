<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/page_color">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/circle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="374dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/exit"
                android:src="@drawable/ic_exit"
                android:background="@color/main_color"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit"
                android:layout_gravity="center"
                android:textColor="@color/buttons_color"
                android:textSize="18sp"
                />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/avatar"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Пользователь123"
            android:layout_gravity="center"
            android:textColor="@color/buttons_color"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="exampleEmail@gmail.com"
            android:layout_gravity="center"
            android:textColor="@color/page_color"
            android:textSize="14sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_marginHorizontal="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:text="Настройки профиля"
            android:background="@drawable/button_background"
            android:theme="@style/Button.Profile"
            android:textColor="@color/page_color"/>


        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Выбрать тему"
            android:layout_gravity="center"
            android:textColor="@color/buttons_color"
            android:textSize="18sp"
            />


        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Дата и время"
            android:layout_gravity="center"
            android:textColor="@color/buttons_color"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Виджеты"
            android:layout_gravity="center"
            android:textColor="@color/buttons_color"
            android:textSize="14sp"
            />


    </LinearLayout>

</FrameLayout>