<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_color">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextFieldLayout1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Имя пользователя"
        android:maxWidth="400dp"
        android:textColor="@color/buttons_color"
        android:textColorHint="@color/buttons_color"
        app:boxStrokeColor="@color/buttons_color"
        app:boxStrokeErrorColor="@color/red"
        app:cursorColor="@color/buttons_color"
        app:hintTextColor="@color/buttons_color">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/buttons_color"
        android:textColorHint="@color/buttons_color"
        app:cursorColor="@color/buttons_color" />
    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>